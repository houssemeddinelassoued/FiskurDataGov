<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    tools:context="eu.fiskur.fiskurdatagov.PackageResultActivity">

    <TextView
        android:id="@+id/resource_title_label"
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/resource_content_label"
        android:layout_below="@+id/resource_title_label"
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/results_list_view"
        android:layout_below="@+id/resource_content_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
